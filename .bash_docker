#!/bin/bash

export DOCKER_REPO_PREFIX=benmatselby

del_stopped(){
	local name=$1
	local state
	state=$(docker inspect --format "{{.State.Running}}" "$name" 2>/dev/null)

	if [[ "$state" == "false" ]]; then
		docker rm "$name"
	fi
}

dprecis() {
    del_stopped precis

    docker run \
        --rm \
        -t \
        -eVSTS_ACCOUNT \
        -eVSTS_PROJECT \
        -eVSTS_TEAM \
        -eVSTS_TOKEN \
        -eTRAVIS_CI_TOKEN \
        -eTRAVIS_CI_OWNER \
        -eGITHUB_TOKEN \
        -eGITHUB_OWNER \
        -eJENKINS_URL \
        -eJENKINS_USERNAME \
        -eJENKINS_PASSWORD \
        -eJENKINS_VIEW \
        -v "${HOME}/.precis":/root/.precis \
        --name precis \
        ${DOCKER_REPO_PREFIX}/precis "$@"
}
dfrost() {
    docker run \
        --rm \
        -t \
        -eAZURE_DEVOPS_ACCOUNT \
        -eAZURE_DEVOPS_PROJECT \
        -eAZURE_DEVOPS_TEAM \
        -eAZURE_DEVOPS_TOKEN \
        -eTRAVIS_CI_TOKEN \
        -eTRAVIS_CI_OWNER \
        -eJENKINS_URL \
        -eJENKINS_USERNAME \
        -eJENKINS_PASSWORD \
        -eJENKINS_VIEW \
        ${DOCKER_REPO_PREFIX}/frost "$@"
}
ddonny() {
    docker run \
        --rm \
        -t \
        -eAZURE_DEVOPS_ACCOUNT \
        -eAZURE_DEVOPS_PROJECT \
        -eAZURE_DEVOPS_TEAM \
        -eAZURE_DEVOPS_TOKEN \
        ${DOCKER_REPO_PREFIX}/donny "$@"
}
dwalter() {
     docker run \
        --rm \
        -t \
        -eJIRA_TOKEN \
        -eJIRA_URL \
        -eJIRA_USERNAME \
        -v "${HOME}/.walter":/root/.walter \
        ${DOCKER_REPO_PREFIX}/walter "$@"
}
gaudit() {
    docker run --rm -t \
        -eGITHUB_TOKEN="${GITHUB_TOKEN}" \
        jess/audit "$@"
}
travis() {
    docker run --rm -it \
        -v "${HOME}/.travis:/root/.travis" \
        -v "$(pwd):/usr/src/repo" \
        --workdir /usr/src/repo \
        --log-driver none \
        -eTRAVIS_TOKEN="${TRAVIS_CI_TOKEN}" \
        jess/travis "$@"
}
udict() {
    docker run --rm -t jess/udict "$@"
}

