{
  "audioCues.onDebugBreak": "on",
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.enableFiletypes": ["terraform"],
  "cSpell.language": "en-GB",
  "dotfiles.repository": "https://github.com/benmatselby/dotfiles.git",
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 100, 120],
  "editor.stickyScroll.enabled": true,
  "editor.suggest.showWords": false,
  "editor.tabSize": 2,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock"
  },
  "files.associations": { "*.hcl": "terraform" },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "outline.collapseItems": "alwaysCollapse",
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "prettier.printWidth": 120,
  "search.exclude": {
    "**/.mypy_cache": true,
    "bandit_baseline": true
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.shellIntegration.enabled": true,
  "terraform.languageServer.enable": true,
  "window.autoDetectColorScheme": true,
  "window.commandCenter": true,
  "window.restoreWindows": "none",
  "window.title": "${rootName}${separator}${activeFolderMedium}/${activeEditorShort}",
  "workbench.colorTheme": "Solarized Light",
  "workbench.editor.enablePreview": true,
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.preferredDarkColorTheme": "Solarized Dark",
  "workbench.preferredLightColorTheme": "Solarized Light",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 12,
  "zenMode.hideLineNumbers": false,
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.wordBasedSuggestions": false,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.formatOnType": true
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.inlineSuggest.enabled": true,
  "terminal.integrated.defaultProfile.osx": "tmux-shell"
}
